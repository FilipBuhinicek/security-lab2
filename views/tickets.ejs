<h2>Tickets (IDOR demo)</h2>

<table border="1" cellpadding="6" cellspacing="0">
  <tr><th>ID</th><th>Title</th><th>Owner</th><th>Actions</th></tr>
  <% if (tickets.length === 0) { %>
    <tr><td colspan="4">Nema ticketa za prikaz.</td></tr>
  <% } %>

  <% tickets.forEach(t=>{ %>
    <tr>
      <td><%= t.id %></td>
      <td><%= t.title %></td>
      <td><%= t.owner_name %></td>
      <td><a href="/tickets/<%= t.id %>/edit">Edit</a></td>
    </tr>
  <% }) %>
</table>